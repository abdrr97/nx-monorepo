{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@voyage-app-b2b/shared-types": ["libs/shared-types/src/index.ts"],
      "@voyage-app-b2b/ui": ["libs/ui/src/index.ts"],
      "@api/*": ["apps/api/src/*"],
      "@admin/*": ["apps/admin/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
